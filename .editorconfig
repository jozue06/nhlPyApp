# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, React, JSON, CSS, HTML files - 2 spaces
[*.{js,jsx,ts,tsx,json,css,scss,html,htm,vue}]
indent_style = space
indent_size = 2

# Python files - 4 spaces (follows PEP 8)
[*.py]
indent_style = space
indent_size = 4

# Markdown files - preserve trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML files - 2 spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts - 2 spaces
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Config files - 2 spaces
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 2
